@model IEnumerable<MVC_Onion_Project.Presentation.Models.CategoryVM_s.CategoryListVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a style="color: white" asp-action="Create" >Create New</a>
</p>

<div class="row">
    <div>
        <h1 style="color:white">Category Table</h1>
    </div>
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-header pb-0">
            
         
            <a class="btn btn-success" asp-controller="Category" asp-action="Create">Create</a>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0 ">
                    <table class="table align-items-center mb-0 ">
                        <thead>
                            <tr >
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                               
                            </tr>
                        </thead>
                        <tbody>
                             @foreach (var item in Model) {

                            <tr>

                                <td>
                                    <div class="d-flex px-2 py-1">
                                     
                                        <div class="d-flex flex-column justify-content-center">
                                                <h6 class="mb-0 text-sm">
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </h6>
                                        </div>
                                    </div>
                                </td>

                                    <td class="float-lg-end">
                                       <a class="btn btn-warning" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                       <a class="btn btn-primary" asp-controller="Category" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                       <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" onclick="return showDataAlert()">Delete</a>
                                     
                                    </td>
                                                        
                   
                            </tr>
                            }
                       
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>









